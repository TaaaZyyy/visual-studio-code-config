        },

        // DataSpider
        {
            "text": "|START       |",
            "color": "#000",
            "isWholeLine": false,
        },
        {
            "text": "|ERROR       |",
            "color": "#000",
            "backgroundColor": "red",
        },
        {
            "text": "|CATCH       |",
            "color": "#000",
            "backgroundColor": "red",
        },
    ],






    // ★ローカル
    // 【Salesforceの設定】
    // JDKの場所
    "salesforcedx-vscode-apex.java.home": "C:/Program Files/Java/jdk-11.0.4",
}