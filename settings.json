{
    // ★新機能おためし
    // Peekの定義リンク
    "editor.definitionLinkOpensInPeek": true,
    // 折り畳まれた線のどこでも展開する
    "editor.unfoldOnClickAfterEndOfLine": true,
    // ルーラーの色
    // "editor.rulers": [
    //     {
    //         "column": 80,
    //         "color": "#ff00ff"
    //     },
    //     {
    //         "column": 90,
    //         "color": "#ff0000"
    //     }
    // ]
    "diffEditor.maxComputationTime": 0,



    // ★パブリック

    // 【ユーティリティ】
    // 初期ファイルのドキュメントタイプ
    "files.defaultLanguage": "markdown",
    // 自動保存
    "files.autoSave": "afterDelay",
    // エクスプローラ設定
    "explorer.confirmDragAndDrop": false,
    // クリップボード設定
    "editor.copyWithSyntaxHighlighting": false,
    // パンくずリスト
    "breadcrumbs.enabled": true,
    // エクスプローラ非表示設定
    "files.exclude": {
        "**/.git": false
    },
    // 閉じるボタンの位置
    "workbench.editor.tabCloseButton": "left",
    "explorer.openEditors.visible": 50,


    // 【見た目の変更】
    // テーマ
    // "workbench.colorTheme": "Default High Contrast",
    "workbench.colorTheme": "Codey Midnight",
    // "workbench.colorTheme": "Default Light+",
    // "workbench.colorTheme": "Solarized Light",
    // 画面の拡大
    "window.zoomLevel": -1,
    "editor.mouseWheelZoom": true,
    // ルーラー
    "editor.rulers": [
        80,
        120,
        160,
        200
    ],
    "editor.minimap.enabled":true,
    // ミニマップ軽量化
    "editor.minimap.renderCharacters": false,
    // 表示位置をミニマップでハイライトする
    "editor.minimap.showSlider": "always",
    // ミニマップ表示位置
    "editor.minimap.side": "left",
    // 制御文字の表示
    "editor.renderControlCharacters": true,
    "editor.fontFamily": "Consolas, 'Courier New', monospace, メイリオ",
    // エディタグループ
    "workbench.editor.splitSizing": "split",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 15,
    // 選択したラインの強調表示
    "editor.renderLineHighlight": "all",

    // 【入力補助】
    // 入力候補の設定
    "editor.wordBasedSuggestions": false,
    // 入力候補の表示 falseにしても ctrl + space で表示可能。
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    // ユーザスニペットを候補のトップに表示
    "editor.snippetSuggestions": "top",
    // スニペット有効化
    "editor.tabCompletion": "on",
    // 空白文字の表示
    "editor.renderWhitespace": "all",
    // 差分表示
    "diffEditor.ignoreTrimWhitespace": false,
    // フォーマッター
    "editor.formatOnPaste": false,

    // 【ファイル設定】
    // 末尾の空行を削除
    "files.trimFinalNewlines": true,
    // 末尾の空白を削除
    "files.trimTrailingWhitespace": true,
    // 文字コード
    "files.encoding": "utf8",
    // 改行コード
    // "files.eol": "\r\n"
    "files.eol": "\n",
    // インデント
    // "editor.detectIndentation": false,
    // "editor.insertSpaces": false,
    // "editor.tabSize": 4,



    // 【Emmet】
    // https://technical-creator.com/vscode-emmet/
    "emmet.triggerExpansionOnTab": true,
    "emmet.variables": {"lang" : "ja"},

    // ファイルの対応付
    "files.associations": {
        "*.xml": "xml"
    },



    // 【言語別設定】
    // Preferences: Configure language specific settings
    "[apex]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[visualforce]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    "[apexlog]": {
        "files.autoGuessEncoding": true,
        "editor.wordWrap": "on"
    },
    "[javascript]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    "[css]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
    },
    // component、applicationを含む
    "[html]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        // 行の折り返し
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 400,
    },
    "[json]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[python]": {
        "files.trimTrailingWhitespace": false,
    },
    "[go]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": false,
    },
    "[bat]": {
        // 行の折り返し
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 120,
        "files.encoding": "shiftjis",
        "files.eol": "\r\n"
    },

    // git
    "git.enableSmartCommit": true,
    "git.autofetch": true,



    // 【拡張】
    // 【Salesforce】
    "salesforcedx-vscode-core.retrieve-test-code-coverage": true,
    "salesforcedx-vscode-lightning.showLightningExplorer": true,
    "salesforcedx-vscode-core.show-cli-success-msg": false,
    "salesforcedx-vscode-core.detectConflictsAtSync": true,

    // 【gitlens】
    "gitlens.gitCommands.closeOnFocusOut": true,
    "gitlens.views.repositories.branches.layout": "list",

    // 【InsertNumbers】
    "insertnum.formatstr" : "%d",
    "insertnum.start" : 1,
    "insertnum.step" : 1,

    // 【printcode】
    "printcode.fontSize": 2,

    // 【TODO Highlight】
    "todohighlight.include": [
        "**/*.cls",
    ],
    // TODO: FIXME:
    "todohighlight.keywords": [
        {
